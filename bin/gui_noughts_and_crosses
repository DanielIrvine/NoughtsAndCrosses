#! /usr/bin/env ruby

$LOAD_PATH.unshift File.dirname(__FILE__) + '/../lib'

require 'qt'
require 'game_board_widget'
require 'question'
require 'gui_display'
require 'play_timer'

app = Qt::Application.new(ARGV)
module NoughtsAndCrosses

  module GUI

      GUIDisplay.new(GameBoardWidget.new,
                     Question.new,
                     PlayTimer.new).begin
  end
end

app.exec
